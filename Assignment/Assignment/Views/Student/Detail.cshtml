@model Student
<h1 class="alert alert-success"><span class="glyphicon glyphicon-chevron-right"></span> Detail of the Student</h1>
<div class="col-md-12">
    <div class="col-md-8 alert alert-info">
        <div>
            <h4><span class="glyphicon glyphicon-star-empty"></span> Detail of @Model.Name</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-star-empty"></span> Id: @Model.Id</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-star"></span> RollNo: @Model.RollNo</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-user"></span> FatherName: @Model.FatherName</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-apple"></span> Class: @Model.Class</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-copy"></span> Section: @Model.Section</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-book"></span> Subject: @Model.SubjectGroup</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-pencil"></span> Teacher: @Model.TeacherIncharge</h4>
        </div>
        <div>
            <h4><span class="glyphicon glyphicon-paperclip"></span> Email: @Model.Email</h4>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3 alert alert-warning">
        <div>
            <a class="btn btn-warning btn-block" href="/Student/Create"><span class="glyphicon glyphicon-pencil"></span>Create a new Student</a>
        </div>
        <br />
        <div>
            <a class="btn btn-info btn-block" href="/Student/List"><span class="glyphicon glyphicon-copy"></span>All Students that are Registered</a>
        </div>
        <br />
        <div>
            <a class="btn btn-danger btn-block" href="/Student/Delete?ID=@Model.Id"><span class="glyphicon glyphicon-alert"></span>Delete Student</a>
        </div>
        <br />
        <div>
            <a class="btn btn-primary btn-block" href="/Student/Edit?ID=@Model.Id"><span class="glyphicon glyphicon-edit"></span>Edit Student</a>
        </div>
        <br />
        <div>
            <a class="btn btn-default btn-block" href="/Student/GetCV?S_CV=@Model.Cv"> <span class="glyphicon glyphicon-download"></span>Download Profile Picture</a>
        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-8">
        <div id="AdDiv">


        </div>
    </div>
    <div class="col-md-1">

    </div>
